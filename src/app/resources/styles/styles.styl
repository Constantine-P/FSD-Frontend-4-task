@import "variables.styl"

.panel
  display block
  align-self center
  justify-self center
  font-size $font-size
  min-width 260px
  font-family Garamond, serif

  &__row
    display flex
    justify-content space-between
    align-items flex-end
    margin-top 15px

    .data-input
      font-family Garamond, serif
      padding-left 5px
      padding-right 5px
      box-sizing border-box
      font-size $font-size
      justify-self end
      width 110px
      min-width 50px
      margin-left 15px

    .data-input[type="checkbox"]
      width auto


.slider
  display flex
  justify-content center
  justify-self center
  align-self center
  align-items center
  border-radius 3px
  padding 40px
  box-sizing border-box
  user-select none
  font-size $font-size

  &__scale
    position relative
    box-sizing border-box

  &__scale-line
    position absolute
    border 2px solid $border-color
    border-radius 5px
    box-sizing border-box
    background-color $scale-color
    box-shadow 1px 1px 3px 0 $shadow-color

  &__range-line
    z-index 1
    position absolute
    border-radius 3px
    transition 300ms
    background-color $range-color
    margin 2px

  &__handle
    position absolute
    box-sizing border-box
    z-index 2
    cursor pointer
    transition 300ms
    background-color $text-color
    border 2px solid $border-color
    width 15px
    height 15px
    border-radius 50%
    box-shadow 1px 1px 3px 0 $shadow-color

  &__scale-values
    position absolute
    box-sizing border-box
    color $text-color

  &__scale-value
    position absolute

  &__tooltip
    display flex
    justify-content center
    align-items center
    position absolute
    box-sizing border-box
    border-left 1px solid $text-color
    border-right 1px solid $text-color
    border-radius 3px
    padding-right 5px
    padding-left 5px
    transition 300ms
    color $text-color

  .hidden
    display none !important


  &_horizontal
    width 100%
    min-width 200px
    height 50px

    .slider__scale
      position relative
      width 100%
      height 10px
      min-height 10px
      min-width 200px

    .slider__scale-line
      width 100%
      height 10px

    .slider__range-line
      width 100%
      height 6px

    .slider__handle
      transform translate(-50%, -2.5px)

    .slider__tooltip
      bottom 150%
      transform translateX(-50%)
      margin-left 50%

    .slider__scale-values
      bottom -8px
      width 100%

    .slider__scale-value
      transform translateX(-50%)


  &_horizontal-reverse
    .slider__handle
      transform translate(50%, -2.5px)

    .slider__tooltip
      bottom 150%
      transform translateX(-50%)
      margin-right 50%

    .slider__scale-values
      bottom -8px
      width 100%

    .slider__scale-value
      transform translateX(50%)

  &_vertical
    min-height 250px
    height 100%
    width 50px

    .slider__scale
      width 10px
      min-width 10px
      height 100%
      min-height 200px

    .slider__scale-line
      height 100%
      width 10px

    .slider__range-line
      height 100%
      width 6px

    .slider__handle
      transform translateY(50%)
      margin-left -25%

    .slider__tooltip
      left 200%
      transform translateY(-50%)
      margin-top 50%

    .slider__scale-values
      left -15px
      height 100%

    .slider__scale-value
      transform translate(-100%, 50%)

  &_vertical-reverse
    .slider__handle
      transform translateY(-50%)

    .slider__tooltip
      left 200%
      transform translateY(-50%)
      margin-bottom 50%

    .slider__scale-values
      left -15px
      height 100%

    .slider__scale-value
      transform translate(-100%, -50%)
