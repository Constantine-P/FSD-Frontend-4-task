background-color = #e7e7e7
text-color = black
border-color = #FFFFFF
shadow-color = #838383

.slider-wrapper
  max-width 1000px
  display grid
  grid-template-rows auto 1fr
  grid-gap 10px
  margin 10px
  color text-color
  padding 10px
  font-family Garamond, sans-serif
  background-color background-color
  border 1px solid border-color
  box-shadow 1px 1px 3px 0 shadow-color

  .panel_big
    grid-column 2
    grid-row 1 / span 2
    align-self start

    @media screen and (max-width: 700px)
      grid-column 1
      grid-row 3

  .panel_small
    grid-column 1
    grid-row 1
    display grid
    grid-template-columns 1fr 1fr
    grid-gap 5px
    width auto

    label
      display grid
      grid-gap 5px

  .slider
    grid-column 1
    grid-row 2
